!!!
%html
  %head
    %title CM Tracker
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Lobster+Two', 
      'http://fonts.googleapis.com/css?family=Cabin+Sketch:700',
      'smoothness/jquery-ui-1.8.16.custom',
      'chosen/chosen'
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = csrf_meta_tag
    = javascript_include_tag :defaults, :highcharts, "chosen/chosen.jquery.min.js"
    /[if IE]
      = javascript_include_tag :ie_high_charts
  %body
    %header
      = link_to root_path do
        = image_tag('logos/MHK_Kids_logo_BIRD_transparent.png')
      .header_controls
        %h1 CM Tracker
        %h4.welcome= render 'application/welcome'
        %nav
          %ul
            %li
              = link_to('home', root_path)
              \|
            %li
              = link_to('children', children_path)
              \|
            %li 
              = link_to('reports', '/reports')
    #main
      %p.notice= notice
      %p.alert= alert
      = yield
